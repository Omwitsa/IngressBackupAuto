@model IngressBkpAutomation.ViewModel.LoginVm

@{
    Layout = null;
    ViewData["Title"] = "Login";

    var returnUrl = ViewData["ReturnUrl"] as string;
    returnUrl = System.Net.WebUtility.UrlEncode(returnUrl);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Ingress Backup Automation</title>

    <!-- Fontfaces CSS-->
    <link href="~/files/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/files/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/files/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/files/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/files/css/theme.css" rel="stylesheet" media="all">
    <link href="~/css/custom.css" rel="stylesheet" media="all">
</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            Sign In
                        </div>
                        <div class="login-form">
                            <form asp-controller="Home" asp-action="Login">
                                <div class="form-group">
                                    <label class="form-control-label">User ID <span class="required">*</span></label>
                                    <input asp-for="UserID" type="text" class="form-control" required>
                                    <span asp-validation-for="UserID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label"> Password <span class="required">*</span></label>
                                    <input asp-for="Password" type="password" class="form-control" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/files/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/files/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/files/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <script src="~/files/vendor/slick/slick.min.js"></script>
    <script src="~/files/vendor/wow/wow.min.js"></script>
    <script src="~/files/vendor/animsition/animsition.min.js"></script>
    <script src="~/files/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/files/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/files/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/files/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/files/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/files/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/files/vendor/select2/select2.min.js"></script>
    <script src="~/files/js/main.js"></script>

    @await Component.InvokeAsync("Notyf")
</body>
</html>
