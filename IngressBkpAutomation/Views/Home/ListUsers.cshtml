@using IngressBkpAutomation.Utilities;
@model IEnumerable<IngressBkpAutomation.Models.User>
@{
    ViewData["Title"] = "Users";

    Pager pager = new Pager();
    //int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        //pageNo = pager.CurrentPage;
    }
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">
                Users
                <small>
                    <span class="float-right mt-1">
                        <a asp-action="NewUser" class="btn btn-primary waves-effect waves-light">
                            <i class="zmdi zmdi-plus"></i>Add
                        </a>
                    </span>
                </small>
            </strong>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Names)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Names)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>

                                    <td>
                                        @* <a asp-action="EditUser" asp-route-id="@item.Id">Edit</a> | *@
                                        @*  <a asp-action="UserDetails" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                @*  @if (pager.TotalPages > 0)
                {
                <div class="col-sm-12">
                <div class="pagination mt-30">
                <ul class="pagination mt-30">
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                <li class="@(pge == pager.CurrentPage ? "active" : "")">
                <a asp-action="ListUsers" asp-route-pg="@pge">@pge</a>
                </li>
                }
                </ul>
                </div>
                </div>
                } *@

                @if (pager.CurrentPage > 0)
                {
                    <a href="@Url.Action("ListUsers", new { page = pager.CurrentPage - 1 })"
                       class="btn btn-default">
                        &laquo; Prev
                    </a>
                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <a href="@Url.Action("ListUsers", new { page = pager.CurrentPage + 1 })"
                       class="btn btn-default">
                        Next &raquo;
                    </a>
                }
            </div>
        </div>
    </div>
</div>
