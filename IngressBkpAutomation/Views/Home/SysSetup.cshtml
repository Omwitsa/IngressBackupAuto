@model IngressBkpAutomation.Models.SysSetup

<div class="container-fluid">
    <form asp-action="SysSetup">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card">
            <div class="card-header">
                <strong>Setup</strong>
            </div>

            <div class="card-body card-block">
                <div class="row">
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Organization Name <span class="required">*</span></label>
                        <input asp-for="OrgName" type="text" class="form-control" required>
                        <span asp-validation-for="OrgName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Site Name <span class="required">*</span></label>
                        <input asp-for="SiteName" type="text" class="form-control" required>
                        <span asp-validation-for="SiteName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Smtp UserName <span class="required">*</span></label>
                        <input asp-for="SmtpUserName" type="text" class="form-control" required>
                        <span asp-validation-for="SmtpUserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label"> Smtp Password</label>
                        <input asp-for="SmtpPassword" type="password" class="form-control">
                        <span asp-validation-for="SmtpPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Smtp Server <span class="required">*</span></label>
                        <input asp-for="SmtpServer" type="text" class="form-control" required>
                        <span asp-validation-for="SmtpServer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Smtp Port <span class="required">*</span></label>
                        <input asp-for="SmtpPort" type="text" class="form-control" required>
                        <span asp-validation-for="SmtpPort" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Socket Option <span class="required">*</span></label>
                        <select asp-for="SocketOption" class="form-control" asp-items="@ViewBag.options" required></select>
                        <span asp-validation-for="SocketOption" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Mysql UserName <span class="required">*</span></label>
                        <input asp-for="MysqlUserName" type="text" class="form-control" required>
                        <span asp-validation-for="MysqlUserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label"> Mysql Password</label>
                        <input asp-for="MysqlPassword" type="password" class="form-control">
                        <span asp-validation-for="MysqlPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Mysql Server <span class="required">*</span></label>
                        <input asp-for="MysqlServer" type="text" class="form-control" required>
                        <span asp-validation-for="MysqlServer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Site Ingress Db <span class="required">*</span></label>
                        <input asp-for="SiteIngressDb" type="text" class="form-control" required>
                        <span asp-validation-for="SiteIngressDb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Ho Ingress Db <span class="required">*</span></label>
                        <input asp-for="HoIngressDb" type="text" class="form-control" required>
                        <span asp-validation-for="HoIngressDb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Ingress Back Months <span class="required">*</span></label>
                        <input asp-for="IngressBackMonths" type="text" class="form-control" required>
                        <span asp-validation-for="IngressBackMonths" class="text-danger"></span>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
                        <label class="form-control-label">Contact</label>
                        <input asp-for="Contact" type="text" class="form-control">
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="checkbox">
                        <div class="col-sm-12">
                            <input type="checkbox" asp-for="Closed">
                            <label asp-for="Closed" class="m-b-10"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">
                    <i class="fa fa-dot-circle-o"></i> Save
                </button>
                <a asp-controller="Backup" asp-action="Index" class="btn btn-secondary btn-sm waves-effect">
                    <i class="fa fa-ban"></i> Back
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {

        });
    </script>
}