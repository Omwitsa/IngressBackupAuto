<header class="header-desktop3 d-none d-lg-block">
    <div class="section__content section__content--p35">
        <div class="header3-wrap">
            <div class="header__logo">
                @* <a href="#">
                    <img src="images/icon/logo-white.png" alt="CoolAdmin" />
                </a> *@
            </div>

            <div class="header__navbar">
                <ul class="list-unstyled">
                    @* <li>
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fas fa-shopping-basket"></i>
                            <span class="bot-line"></span>Backup
                        </a>
                    </li> *@
                </ul>
            </div>

            <div class="header__tool">
                <div class="account-wrap">
                    <div class="account-item account-item--style2 clearfix js-item-menu">
                        <div class="image">
                            <img src="/assets/images/icon/avatar-01.jpg" alt="Photo" />
                        </div>
                        <div class="content">
                            <a class="js-acc-btn" href="#">

                            </a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a href="#">
                                        <img src="/assets/images/icon/avatar-01.jpg" alt="Photo" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a href="#">@User.Identity.Name</a>
                                    </h5>
                                    @* <span class="email">johndoe@example.com</span> *@
                                </div>
                            </div>
                            <div class="account-dropdown__body">
                                <div class="account-dropdown__item">
                                    <a asp-controller="Home" asp-action="ListUsers">
                                        <i class="zmdi zmdi-account"></i>Users
                                    </a>
                                    <a asp-controller="Home" asp-action="SysSetup">
                                        <i class="zmdi zmdi-settings"></i>Setup
                                    </a>
                                </div>
                            </div>
                            <div class="account-dropdown__footer">
                                <a asp-controller="Home" asp-action="Logout">
                                    <i class="zmdi zmdi-power"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
